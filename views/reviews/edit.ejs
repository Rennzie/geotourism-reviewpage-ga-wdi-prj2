<div class="container">
  <form action="/geoSite/<%=geoSite.id%>/review/<%=review.id%>" method="POST">

    <div class="field">
      <label class="label" for="rating">Rating</label>
      <div class="control">
        <input class="input" name="rating" type="number" value="<%= review.rating%>">
      </div>
    </div>

    <div class="field">
      <label class="label" for="content">Review</label>
      <div class="control">
        <textarea class="textarea" name="content" rows="8" cols="80"><%=review.content%></textarea>
      </div>
    </div>

    <input type="hidden" name="_method" value="PUT">
    <div class="field is-grouped">
      <div class="control">
        <button class="button is-info is-link">Update</button>
      </div>
      <div class="control">
        <a href="/geoSites/<%=geoSite.id%>" class="button is-text">Cancel</a>
      </div>
    </div>

  </form>
</div>
